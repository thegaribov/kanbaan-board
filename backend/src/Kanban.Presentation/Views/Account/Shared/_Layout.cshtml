@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Cargo website" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/client/assets/images/favicon.ico" asp-append-version="true">
    <link rel="shortcut icon" href="~/client/assets/images/favicon.ico" asp-append-version="true">

    <!-- App css -->
    <link href="~/client/assets/css/bootstrap.min.css" asp-append-version="true" rel="stylesheet" type="text/css" />
    <link href="~/client/assets/css/icons.min.css" asp-append-version="true" rel="stylesheet" type="text/css" />
    <link href="~/client/assets/css/app.min.css" asp-append-version="true" rel="stylesheet" type="text/css" />

    <!-- Custom css -->
    @RenderSection("styles", required: false)

</head>

<body id="body" class="auth-page" style="background-image: url('/client/assets/images/p-1.png'); background-size: cover; background-position: center center;">
        <div class="container-md">
            <div class="row vh-100 d-flex justify-content-center">
                <div class="col-12 align-self-center">
                    <div class="card-body">

                        @RenderBody()

                    </div><!--end card-body-->
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
        <!-- App js -->
        <script src="~/client/assets/js/app.js"></script>

        <!-- Custom Js -->
        @RenderSection("scripts", required: false)
    </body>
</html>
