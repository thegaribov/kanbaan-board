@using Kanban.Presentation.ViewModels.Account
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}



<div class="row">
    <div class="col-lg-4 mx-auto">
        <div class="card">
            <div class="card-body p-0 auth-header-box">
                <div class="text-center p-3">
                    <a href="index.html" class="logo logo-admin">
                        <img src="~/client/assets/images/logo-sm.png" height="50" alt="logo" class="auth-logo">
                    </a>
                    <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Let's Get Started</h4>
                    <p class="text-muted  mb-0">Please enter required credentials</p>
                </div>
            </div>

            <div class="card-body pt-0">
                <div class="col-lg-12 mt-2">
                    @await Component.InvokeAsync("ActionResultMessage")
                </div>

                <form asp-controller="account" asp-action="register" method="POST" class="my-4">

                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="FullName"></label>
                        <input class="form-control" asp-for="FullName" placeholder="Enter full name">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="Organisation"></label>
                        <input class="form-control" asp-for="Organisation" placeholder="Organisation">
                        <span asp-validation-for="Organisation" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group">
                        <label class="form-label" asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber" placeholder="Enter phone number">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group">
                        <label class="form-label" asp-for="Address"></label>
                        <input class="form-control" asp-for="Address" placeholder="Enter address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group">
                        <label class="form-label" asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" placeholder="Enter email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group">
                        <label class="form-label" asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" placeholder="Enter password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group">
                        <label class="form-label" asp-for="ConfirmPassword"></label>
                        <input class="form-control" asp-for="ConfirmPassword" placeholder="Enter confirm password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group mb-0 row">
                        <div class="col-12">
                            <div class="d-grid mt-3">
                                <button class="btn btn-primary" type="submit">Register <i class="fas fa-sign-in-alt ms-1"></i></button>
                            </div>
                        </div><!--end col-->
                    </div> <!--end form-group-->
                </form><!--end form-->
                <div class="m-3 text-center text-muted">
                    <p class="mb-0">Already have an account ? <a asp-controller="account" asp-action="login" class="text-primary ms-2">Log in</a></p>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->
</div><!--end row-->