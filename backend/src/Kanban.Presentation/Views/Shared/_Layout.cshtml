@using Kanban.DataAccess.UnitOfWork.Abstracts
@using Kanban.Core.Entities

@inject IUnitOfWork _unitOfWork

@{
    Layout = null;
    User currentUser = await _unitOfWork.Users.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Cargo website" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" type="image/jpg" href="~/common/32.ico" />

    <!-- Plugin css -->
    @RenderSection("plugin_styles", required: false)

    <!-- App css -->
    <link href="~/client/assets/css/bootstrap.min.css" asp-append-version="true" rel="stylesheet" type="text/css" />
    <link href="~/client/assets/css/icons.min.css" asp-append-version="true" rel="stylesheet" type="text/css" />
    <link href="~/client/assets/css/app.min.css" asp-append-version="true" rel="stylesheet" type="text/css" />

    <!-- Custom css -->
    @RenderSection("styles", required: false)
</head>

<body id="body">
    <!-- leftbar-tab-menu -->
    <div class="leftbar-tab-menu menuitem-active">
        <div class="main-icon-menu">
            <a asp-route="organisation-index" class="logo logo-metrica d-block text-center">
                <span>
                    <img src="~/client/assets/images/logo-sm.png" alt="logo-small" class="logo-sm" asp-append-version="true">
                </span>
            </a>
            <div class="main-icon-menu-body">
                <div class="position-reletive h-100" data-simplebar="init" style="overflow-x: hidden;">
                    <div class="simplebar-wrapper" style="margin: 0px;">
                        <div class="simplebar-height-auto-observer-wrapper"><div class="simplebar-height-auto-observer"></div></div><div class="simplebar-mask">
                            <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                                <div class="simplebar-content-wrapper" style="height: 100%; overflow: hidden scroll;">
                                    <div class="simplebar-content" style="padding: 0px;">
                                        <ul class="nav nav-tabs" role="tablist" id="tab-menu">
                                            <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="" data-bs-trigger="hover" data-bs-original-title="Organisations">
                                                <a href="#MetricaUikit" id="uikit-tab" class="nav-link active">
                                                    <i class="ti ti-planet menu-icon"></i>
                                                </a><!--end nav-link-->
                                            </li><!--end nav-item-->
                                        </ul><!--end nav-->
                                    </div>
                                </div>
                            </div>
                        </div><div class="simplebar-placeholder" style="width: auto; height: 375px;"></div>
                    </div><div class="simplebar-track simplebar-horizontal" style="visibility: hidden;"><div class="simplebar-scrollbar" style="width: 0px; display: none;"></div></div><div class="simplebar-track simplebar-vertical" style="visibility: visible;"><div class="simplebar-scrollbar" style="height: 81px; display: block; transform: translate3d(0px, 0px, 0px);"></div></div>
                </div><!--end /div-->
            </div><!--end main-icon-menu-body-->          
        </div>
        <!--end main-icon-menu-->

        <div class="main-menu-inner show">
            <!-- LOGO -->
            <div class="topbar-left">
                <a href="index.html" class="logo">
                    <span>
                        <img src="~/client/assets/images/logo-dark.png" alt="logo-large" class="logo-lg logo-dark" asp-append-version="true">
                        <img src="~/client/aassets/images/logo.png" alt="logo-large" class="logo-lg logo-light" asp-append-version="true">
                    </span>
                </a><!--end logo-->
            </div><!--end topbar-left-->
            <!--end logo-->

            <div class="menu-body navbar-vertical tab-content" data-simplebar="init">
                <div class="simplebar-wrapper" style="margin: -16px;">
                    <div class="simplebar-height-auto-observer-wrapper"><div class="simplebar-height-auto-observer"></div></div><div class="simplebar-mask">
                        <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                            <div class="simplebar-content-wrapper" style="height: auto; overflow: hidden;">
                                <div class="simplebar-content" style="padding: 16px;">
                                    <div id="MetricaUikit" class="main-icon-menu-pane tab-pane active menuitem-active" role="tabpanel" aria-labelledby="uikit-tab">
                                        <div class="title-box" aria-expanded="true">
                                            <h6 class="menu-title">Sidebar menu</h6>
                                        </div>
                                        <div class="collapse navbar-collapse show" id="sidebarCollapse_2">
                                            <!-- Navigation -->
                                            <ul class="navbar-nav">
                                                <li class="nav-item menuitem-active">
                                                    <a class="nav-link" href="#sidebarAdvancedUI" data-bs-toggle="collapse" role="button" aria-expanded="true" aria-controls="sidebarAdvancedUI">
                                                        Organisation
                                                    </a>
                                                    <div class="collapse show" id="sidebarAdvancedUI">
                                                        <ul class="nav flex-column">
                                                            <li class="nav-item menuitem-active">
                                                                <a class="nav-link" asp-route="organisation-index">Organisation</a>
                                                            </li><!--end nav-item-->
                                                        </ul><!--end nav-->
                                                    </div><!--end sidebarAdvancedUI-->
                                                </li><!--end nav-item-->
                                            </ul><!--end navbar-nav--->
                                        </div><!--end sidebarCollapse_2-->
                                    </div><!-- end Others -->
                                </div>
                            </div>
                        </div>
                    </div><div class="simplebar-placeholder" style="width: 0px; height: 0px;"></div>
                </div><div class="simplebar-track simplebar-horizontal" style="visibility: hidden;"><div class="simplebar-scrollbar" style="width: 0px; display: none;"></div></div><div class="simplebar-track simplebar-vertical" style="visibility: hidden;"><div class="simplebar-scrollbar" style="height: 0px; display: none;"></div></div>
            </div>
            <!--end menu-body-->
        </div><!-- end main-menu-inner-->
    </div>
    <!-- end leftbar-tab-menu-->

    <!-- Top Bar Start -->
    <div class="topbar">
        <!-- Navbar -->
        <nav class="navbar-custom" id="navbar-custom">
            <ul class="list-unstyled topbar-nav float-end mb-0">
                <li class="dropdown">
                    <a class="nav-link dropdown-toggle nav-user" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                        <div class="d-flex align-items-center">
                             @await Component.InvokeAsync("PrettyUserProfile", new { fullName = currentUser.FullName  })
                            <div>
                                <small class="d-none d-md-block font-11">
                                    @currentUser.Email
                                </small>
                                <span class="d-none d-md-block fw-semibold font-12">
                                    @currentUser.FullName <i class="mdi mdi-chevron-down"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end">
                        <div class="dropdown-divider mb-0"></div>
                        <a class="dropdown-item" asp-controller="account" asp-action="logout">
                            <i class="ti ti-power font-16 me-1 align-text-bottom"></i> Logout
                        </a>
                    </div>
                </li><!--end topbar-profile-->
            </ul><!--end topbar-nav-->

            <ul class="list-unstyled topbar-nav mb-0">
                <li>
                    <button class="nav-link button-menu-mobile nav-icon" id="togglemenu">
                        <i class="ti ti-menu-2"></i>
                    </button>
                </li>
            </ul>
        </nav>
        <!-- end navbar-->
    </div>
    <!-- Top Bar End -->

    <div class="page-wrapper">

        <!-- Page Content-->
        <div class="page-content-tab">
            <div class="container-fluid">

                @RenderBody()

            </div><!-- container -->
            <!--Start Footer-->
            <!-- Footer Start -->
            <footer class="footer text-center text-sm-start">
                &copy;
                <script>
                    document.write(new Date().getFullYear())
                </script> Kanban <span class="text-muted d-none d-sm-inline-block float-end">
                </span>
            </footer>
            <!-- end Footer -->
            <!--end footer-->
        </div>
        <!-- end page content -->
    </div>
    <!-- end page-wrapper -->
    <!-- Javascript  -->
    <!-- Plugin Js -->
    @RenderSection("plugin_scripts", required: false)

    <!-- App js -->
    <script src="~/client/assets/js/app.js" asp-append-version="true"></script>

    <!-- Custom Js -->
    @RenderSection("scripts", required: false)
</body>
</html>